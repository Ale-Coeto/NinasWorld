<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NinasWorld</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NinasWorld.styles.css" asp-append-version="true" />

    @* Tailwind *@
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com">
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            clifford: '#da373d',
          }
        }
      }
    }
    </script>


    @* Bootstrap Icons *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">

</head>

<div class="bg-gray-dark">
    <div class="h-screen w-full">
        <div class="flex flex-row text-md ">

            <div class="fixed w-60 h-screen flex flex-col justify-items-start gap-4 bg-gray-light px-8 py-10 text-white">
                <div class="mb-3 font-semibold text-xl text-purple-400">
                    Nina's World
                </div>         

                <div class=" w-full flex flex-row gap-3 justify-start items-center py-2 pl-4 pr-6 rounded-lg  @((string)ViewData["Title"] == "Intro" ? "bg-gradient-to-t from-purple-500 to-indigo-500" : "none")">
                    <div class="text-white">
                        <i class="bi bi-book"></i>
                    </div>
                    <a href="/Intro" class="text-white">Intro</a>
                </div>

                <div class="w-full flex flex-row gap-3 justify-start items-center py-2 pl-4 pr-6 rounded-lg  @((string)ViewData["Title"] == "Game" ? "bg-gradient-to-t from-purple-500 to-indigo-500" : "none")">
                    <div class="text-white">
                        <i class="bi bi-controller"></i>
                    </div>
                    <a href="/Game" class="text-white">Game</a>
                </div>

                <div class=" w-full flex flex-row gap-3 justify-start items-center py-2 pl-4 pr-6 rounded-lg  @((string)ViewData["Title"] == "Credits" ? "bg-gradient-to-t from-purple-500 to-indigo-500" : "none")">
                    <div class="text-white">
                        <i class="bi bi-vector-pen"></i>
                    </div>
                    <a href="/Credits" class="text-white">Credits</a>
                </div>

            </div>
            <div class="w-full pl-72 pr-12 py-10 bg-gray-dark">
                <div class="text-white text-2xl font-semibold">
                    @((string)ViewData["Title"])
                </div>
                @RenderBody()
            </div>
        </div>
    </div>
</div>
</html>

<script src="/_framework/aspnetcore-browser-refresh.js"></script>
